{
  "name": "digitalvilla",
  "version": "1.0.0",
  "description": "landing page for online portfolio",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "startdev": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" -o css/style.prefix.css css/style.concat.css",
    "compress:css": " node-sass css/style.prefix.css css/style.min.css --output-style compressed",
    "finishdev": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "author": "Omar Villanueva",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "concat": "^1.0.3",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1"
  }
}
